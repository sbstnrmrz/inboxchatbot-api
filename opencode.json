{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "better-auth": {
      "type": "remote",
      "url": "https://mcp.inkeep.com/better-auth/mcp",
      "enabled": true
    },
    "mongodb": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mongodb-mcp-server@latest",
        "--readOnly"
      ],
      "environment": {
        "MDB_MCP_CONNECTION_STRING": "mongodb://localhost:27018/chatbot"
      },
      "enabled": true
    }
  }
}
